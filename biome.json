{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "include": ["src/**/*.js, src/**/*.ts"],
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "warn"
      },
      "nursery": {
        "recommended": false
      }
    }
  },
  "formatter": {
    "enabled": true,
    "include": ["src/**/*.js, src/**/*.ts"],
    "indentStyle": "space",
    "formatWithErrors": false,
    "indentWidth": 2,
    "lineWidth": 120
  }
}
